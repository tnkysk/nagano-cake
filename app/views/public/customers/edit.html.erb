<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-1">
      <h4>登録情報編集</h4>

      <br>
      <br>

      <%= form_for(@customer, url: public_customers_path) do |f| %>

      <table class="table table-borderless">
        <tr>
          <th>名前</th>
          <td>
            <div class="field">
              <%= f.label :（姓） %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= f.label :（名） %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <div class="field">
              <%= f.label :（セイ） %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              <%= f.label :（メイ） %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"60" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td>
            <div class="field">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <div class="field">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"80" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td>
            <div class="field">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-4 offset-1">
      <div class="actions">
        <%= f.submit "編集内容を保存する", class:"btn btn-md btn-primary" %>
      </div>
    </div>
    <div class="col-md-2 offset-2">
      <div class="actions">
        <%= link_to "退会する", public_customers_unsubscribe_path, class: 'btn btn-danger'%>
      </div>
    </div>
      <% end %>
  </div>
</div>