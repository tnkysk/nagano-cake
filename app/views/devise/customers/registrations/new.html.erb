<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-1">
      <h4>新規会員登録</h4>

      <br>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/customers/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
        <tr>
          <th>名前</th>
          <td>
            <div class="field">
              <%= f.label :（姓） %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= f.label :（名） %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <div class="field">
              <%= f.label :（セイ） %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              <%= f.label :（メイ） %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"60" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td>
            <div class="field">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <div class="field">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"80" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td>
            <div class="field">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
          </td>
        </tr>
        <tr>
          <th><% if @minimum_password_length %>
                パスワード<%= @minimum_password_length %>文字以上
              <% end %>
          </th>
          <td>
            <div class="field">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <td>
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
    </div>
    <div class="col-md-2 offset-1">
      <div class="actions">
        <%= f.submit "新規作成", class:"btn btn-md btn-success btn-block" %>
      </div>
    </div>
      <% end %>
  </div>

  <br>

  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-1">
      <h4>既に登録済みの方</h4>
    <br>
      <%= render "devise/customers/shared/links" %>からログインしてください。
    </div>
  </div>

</div>



