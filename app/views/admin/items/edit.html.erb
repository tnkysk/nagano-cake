<div class="container">

  <div class="row">
    <div class="col-md-4">
      <h4>商品編集</h4>
    </div>
  </div>

  <br>
  <br>

  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg' %>
    <br>
    <br>
      <%= form_for(@item, url: admin_item_path) do |f| %>
       <%= f.attachment_field :image %>
    </div>

    <div class="col-md-4">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th><td><%= f.text_field :name, autofocus: true, class:"form-control"%></td>
        <tr>
        <tr>
          <th>商品説明</th><td><%= f.text_area :introduction, class:"form-control" %></td>
        </tr>
        <tr>
          <th>ジャンル</th><td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択して下さい" %></td>
        </tr>
        <tr>
          <th>税抜価格</th><td><%= f.text_field :price, class:"form-control" %></td>
        </tr>
        <tr>
          <th>販売ステータス</th><td><%= f.select :is_active, [["販売中", "true"], ["販売停止中", "false"]], { include_blank: "選択して下さい" } %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4 offset-1">
          <%= f.submit "変更を保存", class:"btn btn-md btn-primary" %>
        <% end %>
    </div>
  </div>

</div>
