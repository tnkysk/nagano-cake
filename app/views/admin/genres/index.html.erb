<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h4>ジャンル一覧・追加</h4>

      <br>
      <br>

        <%= form_for(@genre, url: admin_genres_path, html: { class: "form-inline" }) do |f| %>
          <label for="genre">ジャンル</label>
          <%= f.text_field :name, class:"form-control" %>
          <%= f.radio_button :is_active, true %><%= f.label :genre, "有効", :value => "true"  %>
          <%= f.radio_button :is_active, false %><%= f.label :genre, "無効", :value => "false" %>
          <%= f.submit "追加", class:"btn btn-primary" %>
        <% end %>

      <br>

      <table class="table">
        <thead class="thead-light">
          <tr>
         	<th><p><b>ジャンル</b></p></th>
         	<th><p><b>状態</b></p></th>
         	<th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
          	<th><%= genre.name %></th>
            <th><% if genre.is_active == true %>
                  <p>有効</p>
                <% else %>
                  <p>無効</p>
              	<% end %>
            </th>
          	<th><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-primary' %></th>
          </tr>
          <% end %>
         </tbody>
      </table>

    </div>
  </div>
</div>
