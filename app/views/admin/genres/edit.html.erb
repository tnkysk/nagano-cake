<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h4>ジャンル一覧・追加</h4>

      <br>
      <br>

        <%= form_for(@genre, url: admin_genre_path, html: { class: "form-inline" }) do |f| %>
          <label for="genre">ジャンル</label>
          <%= f.text_field :name, class:"form-control" %>
          <%= f.radio_button :is_active, true %><%= f.label :genre, "有効", :value => "true"  %>
          <%= f.radio_button :is_active, false %><%= f.label :genre, "無効", :value => "false" %>
          <%= f.submit "変更を保存する", class:"btn btn-primary" %>
        <% end %>

    </div>
  </div>
</div>