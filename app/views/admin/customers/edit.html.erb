<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-1">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

      <br>
      <br>

      <%= form_for(@customer, url: admin_customer_path) do |f| %>

      <table class="table table-borderless">
      	<tr>
      	  <th>会員ID</th>
      	  <td><%= @customer.id %></td>
      	</tr>
        <tr>
          <th>名前</th>
          <td>
            <div class="field">
             <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
             <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <div class="field">
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"60" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td>
            <div class="field">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <div class="field">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"80" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td>
            <div class="field">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
          	<%= f.radio_button :is_deleted, false %><%= f.label :customer, "有効", :value => "false"  %>
            <%= f.radio_button :is_deleted, true %><%= f.label :genre, "退会済", :value => "true" %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-4 offset-1">
      <div class="actions">
        <%= f.submit "編集内容を保存する", class:"btn btn-md btn-primary" %>
      </div>
    </div>
      <% end %>
  </div>
</div>