<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10 offset-1">
      <h4>会員一覧</h4>
    </div>
  </div>

      <br>
      <br>

  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8 offset-1">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
         	<th>会員ID</th>
         	<th>氏名</th>
         	<th>メールアドレス</th>
          <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
          	<td><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted == false %>
                  <p>有効</p>
                <% else %>
                  <p>退会済</p>
              	<% end %>
            </td>
          </tr>
          <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
